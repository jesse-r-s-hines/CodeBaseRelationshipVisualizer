{
    "name": "codebase-relationship-visualizer",
    "description": "Visualize relationships between source code files.",
    "version": "0.0.1",
    "publisher": "jesse-r-s-hines",
    "private": true,
    "license": "MIT",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Visualization",
        "Debuggers"
    ],
    "activationEvents": [
        "onDebug",
        "onCommand:codeBaseRelationshipVisualizer.start",
        "onWebviewPanel:codeBaseRelationshipVisualizer"
    ],
    "contributes": {
        "commands": [
            {
                "command": "codeBaseRelationshipVisualizer.start",
                "title": "Visualize your code base",
                "category": "CodeBase Relationship Visualizer"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.47.0",
        "@types/vscode-webview": "^1.57.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.4.3",
        "vscode-debugprotocol": "^1.49.0"
    }
}
