{
    "name": "codebase-relationship-visualizer",
    "description": "Visualize relationships between source code files.",
    "version": "0.0.1",
    "publisher": "jesse-r-s-hines",
    "private": true,
    "license": "MIT",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Visualization",
        "Debuggers"
    ],
    "activationEvents": [
        "onDebug",
        "onCommand:codeBaseRelationshipVisualizer.start",
        "onWebviewPanel:codeBaseRelationshipVisualizer"
    ],
    "contributes": {
        "commands": [
            {
                "command": "codeBaseRelationshipVisualizer.start",
                "title": "Visualize your code base",
                "category": "CodeBase Relationship Visualizer"
            }
        ]
    },
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "npm-run-all build:*",
        "build:extension": "tsc -p ./src",
        "build:webview": "webpack --mode development",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "npm-run-all -p watch:*",
        "watch:extension": "tsc -w -p ./src",
        "watch:webview": "webpack --watch --mode development"
    },
    "devDependencies": {
        "@types/d3": "^7.4.0",
        "@types/d3-selection-multi": "^1.0.10",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.47.0",
        "@types/vscode-webview": "^1.57.0",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "css-loader": "^6.7.1",
        "eslint": "^7.21.0",
        "npm-run-all": "^4.1.5",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.3.0",
        "typescript": "^4.4.3",
        "vscode-debugprotocol": "^1.49.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "d3": "^7.4.4",
        "d3-selection-multi": "^1.0.1"
    }
}
