{
    "name": "codebase-relationship-visualizer",
    "description": "Visualize relationships between source code files.",
    "version": "0.0.1",
    "publisher": "jesse-r-s-hines",
    "private": true,
    "license": "MIT",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Visualization",
        "Debuggers"
    ],
    "activationEvents": [
        "*",
        "onCommand:codeBaseRelationshipVisualizer.start",
        "onWebviewPanel:codeBaseRelationshipVisualizer"
    ],
    "contributes": {
        "commands": [
            {
                "command": "codeBaseRelationshipVisualizer.start",
                "title": "Visualize your code base",
                "category": "CodeBase Relationship Visualizer"
            }
        ]
    },
    "main": "./dist/index.js",
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "npm-run-all build:*",
        "build:extension": "tsc -p ./src",
        "build:webview": "webpack --env dev",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "npm-run-all watch:*",
        "watch:extension": "tsc -w -p ./src",
        "watch:webview": "webpack --env dev --watch",
        "test": "npm-run-all test:*",
        "test:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.test.ts' --exclude test/integration/**/*.ts --exclude test/sample-codebases/**/*.ts",
        "test:integration": "npm run pretest && node ./dist/test/test/integration/run.js",
        "pretest": "tsc --project test/integration"
    },
    "devDependencies": {
        "@babel/core": "^7.20.2",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@types/chai": "^4.3.4",
        "@types/chai-as-promised": "^7.1.5",
        "@types/d3": "^7.4.0",
        "@types/d3-selection-multi": "^1.0.10",
        "@types/glob": "^8.0.0",
        "@types/lodash": "^4.14.184",
        "@types/mocha": "^10.0.0",
        "@types/node": "^12.12.0",
        "@types/text-encoding": "^0.0.36",
        "@types/vscode": "^1.47.0",
        "@types/vscode-webview": "^1.57.0",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "@vscode/test-electron": "^2.2.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "css-loader": "^6.7.1",
        "eslint": "^7.21.0",
        "mocha": "^10.1.0",
        "npm-run-all": "^4.1.5",
        "style-loader": "^3.3.1",
        "ts-essentials": "^9.3.0",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.4.3",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "d3": "^7.4.4",
        "d3-context-menu": "^2.1.0",
        "d3-selection-multi": "^1.0.1",
        "glob": "^8.0.3",
        "js-sha256": "^0.9.0",
        "lodash": "^4.17.21",
        "text-encoding": "^0.7.0",
        "tippy.js": "^6.3.7",
        "vscode-debugprotocol": "^1.51.0"
    }
}
